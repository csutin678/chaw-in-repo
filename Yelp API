# import python libraries
import numpy as np
import pandas as pd

# import request library to sent requests
import requests

# Set API Key <Personal>
API_KEY = ('personal api key here')

# Set end-point
ENDPOINT = 'https://api.yelp.com/v3/businesses/matches'

HEADERS = {'Authorization': 'bearer %s'%API_KEY}

# Set parameters for search (varied for each endpoints)
# Check for parameters needed <https://www.yelp.com/developers/documentation/v3>

PARAMETERS = {'term':' ', 
              'limit' : ,
              'radius' : ,
              'offset' : 50, #Access next 50, 100 results total
              'location': ''}
              
response = requests.get(url = ENDPOINT, params = PARAMETERS, headers = HEADERS)

business_data = response.json()

print(business_data)
